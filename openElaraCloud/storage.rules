rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // --- Hardcoded Single-User Security Rules ---
    // This configuration locks Cloud Storage to a single user account,
    // identified by the email address below.

    // IMPORTANT: Replace 'YOUR_EMAIL@example.com' with the email you use for Firebase login.
    function isAllowedUser() {
      return request.auth != null && request.auth.token.email == "andrewquartly@applymytech.ai";
    }

    // Helper function: Is this the user's own folder?
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Helper: File size limits
    function isValidSize(maxSizeMB) {
      return request.resource.size < maxSizeMB * 1024 * 1024;
    }
    
    // Helper: Valid image type
    function isValidImage() {
      return request.resource.contentType.matches('image/.*');
    }

    // ========================================
    // All USER-SPECIFIC paths now require the allowed user
    // ========================================
    match /users/{userId}/{allPaths=**} {
      allow read, write: if isAllowedUser() && isOwner(userId) && isValidSize(50);
    }

    match /images/{userId}/{imageId} {
      allow read, write: if isAllowedUser() && 
                      isOwner(userId) && 
                      isValidImage() &&
                      isValidSize(10); // 10MB limit for images
    }

    match /projects/{userId}/{projectId}/{filePath=**} {
      allow read, write: if isAllowedUser() && 
                      isOwner(userId) && 
                      isValidSize(25); // 25MB per code file
    }

    // ========================================
    // PUBLIC ASSETS (Now private to the allowed user)
    // ========================================
    match /public/{allPaths=**} {
      allow read: if isAllowedUser();
      allow write: if false; // Nobody can write to the public folder
    }

    // ========================================
    // DENY EVERYTHING ELSE BY DEFAULT
    // ========================================
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
