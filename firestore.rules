rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ========================================
    // SINGLE-USER SOVEREIGN DEPLOYMENT
    // ========================================
    // This is a private deployment for ONE authorized user.
    // Change the email below to YOUR Firebase Auth email.
    // ========================================
    
    // The ONE authorized user for this deployment
    function isAuthorizedUser() {
      return request.auth != null && 
             request.auth.token.email == 'andrewquartly@pm.me';
    }
    
    // Helper function: Is this the user's own document?
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // ========================================
    // USER DATA
    // ========================================
    match /users/{userId} {
      // Only the authorized user can access their own data
      allow read: if isAuthorizedUser() && isOwner(userId);
      
      // Write with size validation
      allow write: if isAuthorizedUser() && 
                      isOwner(userId) &&
                      request.resource.size() < 500000; // 500KB max per doc
      
      // All subcollections (chats, settings, images, videos, etc.)
      match /{subcollection}/{docId} {
        allow read: if isAuthorizedUser() && isOwner(userId);
        allow write: if isAuthorizedUser() && 
                        isOwner(userId) &&
                        request.resource.size() < 500000;
        
        // Nested collections (messages within chats, etc.)
        match /{nestedCollection}/{nestedDocId} {
          allow read: if isAuthorizedUser() && isOwner(userId);
          allow write: if isAuthorizedUser() && 
                          isOwner(userId) &&
                          request.resource.size() < 500000;
        }
      }
    }
    
    // ========================================
    // PUBLIC DATA (read-only for authorized user)
    // ========================================
    match /public/{document=**} {
      allow read: if isAuthorizedUser();
      allow write: if false; // Admin only via admin SDK
    }
    
    // ========================================
    // DENY EVERYTHING ELSE
    // ========================================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
