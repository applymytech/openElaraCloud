rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function: Is user authenticated?
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function: Is this the user's own document?
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Helper function: Check if trial is expired (7 days from account creation)
    function isTrialExpired(userData) {
      return userData.trialExpiresAt != null && 
             request.time > userData.trialExpiresAt;
    }
    
    // ========================================
    // USER PROFILES
    // ========================================
    match /users/{userId} {
      // Simple: authenticated users can access their own data
      // Trial enforcement happens at login (app level), not here
      allow read, write: if isAuthenticated() && isOwner(userId);
      
      // All subcollections
      match /{subcollection}/{docId} {
        allow read, write: if isAuthenticated() && isOwner(userId);
        
        // Nested collections
        match /{nestedCollection}/{nestedDocId} {
          allow read, write: if isAuthenticated() && isOwner(userId);
        }
      }
    }
    
    // ========================================
    // PUBLIC DATA (read-only)
    // ========================================
    match /public/{document=**} {
      allow read: if isAuthenticated();
      allow write: if false; // Admin only via admin SDK
    }
    
    // ========================================
    // DENY EVERYTHING ELSE
    // ========================================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
