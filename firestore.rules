rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function: Is user authenticated?
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function: Is this the user's own document?
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // ========================================
    // USER PROFILES
    // ========================================
    match /users/{userId} {
      // Authenticated users can access their own data
      // Trial enforcement happens at app level (frontend + Cloud Functions)
      allow read: if isAuthenticated() && isOwner(userId);
      
      // Write with size validation (prevent abuse)
      allow write: if isAuthenticated() && 
                      isOwner(userId) &&
                      request.resource.size() < 500000; // 500KB max per doc
      
      // All subcollections
      match /{subcollection}/{docId} {
        allow read: if isAuthenticated() && isOwner(userId);
        
        // Limit subcollection document size
        allow write: if isAuthenticated() && 
                        isOwner(userId) &&
                        request.resource.size() < 500000;
        
        // Nested collections
        match /{nestedCollection}/{nestedDocId} {
          allow read: if isAuthenticated() && isOwner(userId);
          allow write: if isAuthenticated() && 
                          isOwner(userId) &&
                          request.resource.size() < 500000;
        }
      }
    }
    
    // ========================================
    // PUBLIC DATA (read-only)
    // ========================================
    match /public/{document=**} {
      allow read: if isAuthenticated();
      allow write: if false; // Admin only via admin SDK
    }
    
    // ========================================
    // RATE LIMITING (internal, functions only)
    // ========================================
    match /_rateLimits/{limitId} {
      allow read, write: if false; // Functions only
    }
    
    // ========================================
    // DENY EVERYTHING ELSE
    // ========================================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
